{
  "name": "flosum_agent",
  "version": "0.1.0",
  "description": "Flosum Agent",
  "main": "index.js",
  "engines": {
    "node": "~15.10.0"
  },
  "scripts": {
    "start": "node .",
    "compile": "ts-node build.ts && tsc",
    "build-version": "npm run compile && bash build.version.sh",
